---
interface Props {
	interest: string;
}
const { interest } = Astro.props;
---

<li class="p-3 bg-gray-50 dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 flex items-center space-x-3">
	<svg
		class="w-5 h-5 text-red-600 dark:text-red-400 flex-shrink-0"
		fill="none"
		stroke="currentColor"
		viewBox="0 0 24 24"
		xmlns="http://www.w3.org/2000/svg"
		aria-hidden="true"
	>
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
	</svg>
	<span class="text-gray-700 dark:text-gray-300 font-medium">
		{interest}
	</span>
</li>