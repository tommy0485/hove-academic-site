---
interface Props {
	id: string;
	controls?: string;
	label: string;
}

const { id, controls, label } = Astro.props;
---

<button
	id={id}
	type="button"
	class="p-2 rounded-full text-gray-600 hover:text-red-600 dark:text-gray-300 dark:hover:text-red-400 transition-colors bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-red-500"
	aria-label={label}
	aria-controls={controls}
>
	<slot />
</button>

{controls === 'theme-toggle-status' && <span id="theme-toggle-status" class="sr-only" aria-live="polite"></span>}