---
import profile from '@/data/profile.json';
const currentYear = new Date().getFullYear();
---

<footer class="mt-16 border-t border-gray-200 dark:border-gray-700">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
		<div class="flex flex-col sm:flex-row justify-between items-center text-center sm:text-left">
			<p class="text-sm text-gray-500 dark:text-gray-400">
				&copy; {currentYear} {profile.displayName}. All rights reserved.
			</p>
			<div class="mt-4 sm:mt-0">
				<a
					href={`mailto:${profile.email}`}
					class="text-sm text-gray-500 hover:text-red-600 dark:hover:text-red-400 transition-colors mr-4"
					aria-label={`Email ${profile.displayName}`}
				>
					Email
				</a>
				<a
					href={`https://github.com/${profile.githubUsername}`}
					target="_blank"
					rel="noopener noreferrer"
					class="text-sm text-gray-500 hover:text-red-600 dark:hover:text-red-400 transition-colors"
					aria-label={`GitHub profile of ${profile.displayName}`}
				>
					GitHub
				</a>
			</div>
		</div>
	</div>
</footer>