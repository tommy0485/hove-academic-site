---
import type { Publication } from '@/types';

interface Props {
	pub: Publication;
}

const { pub } = Astro.props;
---

<article class="p-6 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 bg-white dark:bg-gray-800">
	<h3 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-2">
		<a href={pub.url || '#'} target="_blank" rel="noopener noreferrer" class="hover:text-red-600 dark:hover:text-red-400 transition-colors">
			{pub.title}
		</a>
	</h3>

	<p class="text-sm text-gray-600 dark:text-gray-300 italic mb-3">
		{pub.authors.join(', ')}
	</p>

	<div class="mb-3">
		<span class="text-base font-medium text-gray-800 dark:text-gray-200">
			{pub.venue}
		</span>
		<span class="text-sm text-gray-500 dark:text-gray-400">
			â€” {pub.year}
		</span>
	</div>

	{pub.note && (
		<div class="mb-3">
			<span class="inline-flex items-center rounded-full bg-red-100 px-3 py-1 text-sm font-medium text-red-800 dark:bg-red-900 dark:text-red-200" aria-label="Award or special note">
				<svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
					<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.817 2.031a1 1 0 00-.363 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.817-2.031a1 1 0 00-1.175 0l-2.817 2.031c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
				</svg>
				{pub.note}
			</span>
		</div>
	)}

	<div class="flex flex-wrap gap-2 mt-4" aria-label="Publication keywords">
		{pub.keywords.map((keyword) => (
			<span class="text-xs px-2 py-0.5 rounded-full bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-300" data-keyword={keyword.toLowerCase().replace(/\s/g, '-')}>
				{keyword}
			</span>
		))}
	</div>

	<div class="mt-4 flex flex-wrap gap-3 text-sm font-medium">
		{pub.url && (
			<a
				href={pub.url}
				target="_blank"
				rel="noopener noreferrer"
				class="text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors"
				aria-label={`View abstract for ${pub.title}`}
			>
				Abstract
			</a>
		)}
		{pub.pdf && (
			<a
				href={pub.pdf}
				target="_blank"
				rel="noopener noreferrer"
				class="text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors"
				aria-label={`Download PDF for ${pub.title}`}
			>
				PDF
			</a>
		)}
		{pub.code && (
			<a
				href={pub.code}
				target="_blank"
				rel="noopener noreferrer"
				class="text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors"
				aria-label={`View code for ${pub.title}`}
			>
				Code
			</a>
		)}
	</div>
</article>