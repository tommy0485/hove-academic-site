---
import profile from '@/data/profile.json';
const navItems = [
    { name: 'Home', href: '/' },
    { name: 'Research', href: '/research/' },
    { name: 'Publications', href: '/publications/' },
    { name: 'Projects', href: '/projects/' },
    { name: 'Teaching', href: '/teaching/' },
    { name: 'About', href: '/about/' },
    { name: 'Contact', href: '/contact/' },
];

// FIX: Use 'as any' to bypass strict TypeScript type-checking for 'Astro.base'
const currentPath = Astro.url.pathname.replace((Astro as any).base || '/', '/').toLowerCase();
---

<header class="bg-white shadow dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex-shrink-0">
                <a href="/" class="text-2xl font-bold tracking-tight text-red-700 dark:text-red-500 hover:text-red-500 dark:hover:text-red-300 transition duration-150">
                    {profile.displayName.split(' ')[0]}
                </a>
            </div>
            <nav class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-4">
                    {navItems.map((item) => (
                        <a
                            href={item.href}
                            class:list={[
                                "px-3 py-2 rounded-md text-sm font-medium transition duration-150",
                                currentPath === item.href.toLowerCase() ? "bg-red-700 text-white" : "text-gray-900 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700",
                            ]}
                            aria-current={currentPath === item.href.toLowerCase() ? "page" : undefined}
                        >
                            {item.name}
                        </a>
                    ))}
                </div>
            </nav>
            <div class="md:hidden">
                <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-red-500">
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
</header>