---
import BaseLayout from '@/components/BaseLayout.astro';
import ResearchInterest from '@/components/ResearchInterest.astro';
import profile from '@/data/profile.json';

const meta = {
	title: 'Home',
	description: `Homepage for ${profile.displayName}, ${profile.role} at ${profile.institution}.`,
};
---

<BaseLayout {meta}>
	<section class="flex flex-col md:flex-row items-center justify-between gap-12 py-16">
		<div class="md:w-3/5">
			<h1 class="text-5xl sm:text-6xl font-extrabold text-gray-900 dark:text-gray-50 leading-tight mb-4">
				Hi, I'm <span class="text-red-600 dark:text-red-400">{profile.displayName}</span>
			</h1>
			<h2 class="text-3xl font-semibold text-gray-700 dark:text-gray-300 mb-6">
				{profile.role}
			</h2>
			<p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed mb-8">
				I'm an aspiring full-stack developer and researcher with a passion for **AI/ML**, **Time-series Prediction**, and **Cybersecurity**. I am currently completing my B.S. at <a href="https://www.umt.edu/" target="_blank" rel="noopener noreferrer" class="text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 font-medium transition-colors">{profile.institution}</a>.
			</p>
			<div class="flex flex-wrap gap-4">
				<a
					href="/research"
					class="px-6 py-3 text-lg font-medium text-white bg-red-600 border border-red-600 rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 transition-colors"
					aria-label="View Research Page"
				>
					View Research
				</a>
				<a
					href={`mailto:${profile.email}`}
					class="px-6 py-3 text-lg font-medium text-red-600 border border-red-600 rounded-lg hover:bg-red-50 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 transition-colors"
					aria-label={`Email ${profile.displayName}`}
				>
					Get in Touch
				</a>
			</div>
		</div>
		<div class="md:w-2/5 w-full">
			<div class="w-full bg-gray-100 dark:bg-gray-800 rounded-xl shadow-xl overflow-hidden p-6 border border-gray-200 dark:border-gray-700">
				<div class="flex items-center space-x-4 mb-4">
					<svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
					<h3 class="text-2xl font-bold text-gray-900 dark:text-gray-50">Quick Info</h3>
				</div>
				<ul class="space-y-3 text-gray-700 dark:text-gray-300">
					<li class="flex items-center"><span class="font-semibold w-24">Institution:</span> <span>{profile.institution}</span></li>
					<li class="flex items-center"><span class="font-semibold w-24">Location:</span> <span>{profile.location}</span></li>
					<li class="flex items-center"><span class="font-semibold w-24">Email:</span> <span><a href={`mailto:${profile.email}`} class="text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors">{profile.email}</a></span></li>
					<li class="flex items-center"><span class="font-semibold w-24">GitHub:</span> <span><a href={`https://github.com/${profile.githubUsername}`} target="_blank" rel="noopener noreferrer" class="text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors">{profile.githubUsername}</a></span></li>
				</ul>
			</div>
		</div>
	</section>

	<section class="py-16 border-t border-gray-200 dark:border-gray-700">
		<h2 class="text-3xl font-bold text-center text-gray-900 dark:text-gray-50 mb-10">ðŸ”¬ Research Interests</h2>
		<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" aria-label="Research Interests">
			{profile.researchInterests.map((interest) => (
				<ResearchInterest interest={interest} />
			))}
		</ul>
	</section>
</BaseLayout>