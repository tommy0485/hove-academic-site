---
import BaseLayout from '@/components/BaseLayout.astro';
import profile from '@/data/profile.json';

const meta = {
	title: '404 - Page Not Found',
	description: `The page you're looking for on ${profile.displayName}'s academic website could not be found.`,
};
---

<BaseLayout {meta}>
	<div class="flex flex-col items-center justify-center text-center py-20">
		<h1 class="text-9xl font-extrabold text-red-600 dark:text-red-400 tracking-widest">404</h1>
		<div class="bg-gray-900 px-2 text-sm rounded rotate-12 absolute text-white dark:bg-gray-100 dark:text-gray-900 font-semibold">
			Page Not Found
		</div>
		<p class="mt-5 text-xl text-gray-700 dark:text-gray-300">
			Sorry, the page you are looking for does not exist.
		</p>
		<a
			href="/"
			class="mt-6 inline-block px-6 py-3 text-sm font-medium text-white bg-red-600 border border-red-600 rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 transition-colors"
		>
			Go Back Home
		</a>
	</div>
</BaseLayout>